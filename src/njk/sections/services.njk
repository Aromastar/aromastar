<section class="section section--grey" id="services">
  {% include '../components/SectionLine.njk' %}

  <div class="container">
      <div class="content">
        <div class="content__inner">
          {{ heading(2, section.services.title[0], section.services.title[1]) }}
          <p class="p">{{ section.services.txt[0] }}</p>
          <p class="p">{{ section.services.txt[1] }}</p>
        </div>
      </div>

      <div class="content services__events">
        <div class="services__video">
          <video muted width="100%" height="100%" id="events-video" poster="/assets/video.jpg">
            <source src="/assets/video.mp4" type="video/mp4">
          </video>

          <button class="services__video-btn" id="events-video-btn"></button>
        </div>

        <ul class="services__list">
          {% for service in services %}
            <li class="services__item">
              {{ listItems.event(service.title, service.text, service.link.label, service.link.href, service.image) }}
            </li>
          {% endfor %}
        </ul>

        {{ button.link(section.services.btnLabel, '#contacts') }}
      </div>
  </div>
</section>
