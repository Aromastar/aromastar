<section class="section about" id="about">
  {% include '../components/SectionLine.njk' %}
  <div class="container">
    <div class="content">
      <div class="content__inner">
        {{ heading(2, sections.about.title[0], sections.about.title[1]) }}
        <p class="p">{{ sections.about.txt[0] }}</p>
        <div class="about__img">
          {{ image('about', 'Aromastar')}}
        </div>
        <p class="p">{{ sections.about.txt[1] }}</p>

        <ul class="about__benefits">
          {% for item in benefits %}
            <li class="about__benefit">
              {{ listItems.benefit(item.title, item.text) }}
            </li>
          {% endfor %}
        </ul>

        {{ button.link(sections.about.btnLabel, '#contacts') }}
      </div>
    </div>
  </div>

  <div class="about__bg">
    <picture>
      <img class="image" src="/assets/bg-map.jpg" alt="Map">
    </picture>
  </div>
</section>
